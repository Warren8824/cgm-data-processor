[MAIN]
py-version=3.10
recursive=no
ignore=src/parser/devices/,*/tests/*,setup.pyclear
jobs=1
limit-inference-results=100
persistent=yes
suggestion-mode=yes
unsafe-load-any-extension=no

[MASTER]
init-hook='import sys; sys.path.append("/home/ginge/sandbox/cgm_data_processor")'
ignore-patterns=test_.*\.py # Skip test directories as adding docstrings is unnecasary clutter.

[MESSAGES CONTROL]
disable=raw-checker-failed,
        bad-inline-option,
        locally-disabled,
        file-ignored,
        suppressed-message,
        useless-suppression,
        deprecated-pragma,
        use-symbolic-message-instead,
        R1735,  # dict-literal vs dict() is mostly stylistic
        C0301,  # line-too-long handled by black/other formatters
        E0401, # Unable to import will be dealt with using github CI/CD
        R0917, # Required to allow more than 5 arguments in processors/base.py
        R0801,   # Similar lines in different files - required for formats
        R0912, # too-many-branches - required for some processors

[REPORTS]
output-format=text
reports=no
evaluation=10.0 - ((float(5 * error + warning + refactor + convention) / statement) * 10)
score=yes

[BASIC]
good-names=i,j,k,ex,Run,_,id,df
bad-names=foo,bar,baz,toto,tutu,tata
name-group=
include-naming-hint=no
function-naming-style=snake_case
variable-naming-style=snake_case
const-naming-style=UPPER_CASE
class-naming-style=PascalCase
no-docstring-rgx=^_
docstring-min-length=10

[FORMAT]
max-line-length=100
ignore-long-lines=^\s*(# )?<?https?://\S+>?$
single-line-if-stmt=no
single-line-class-stmt=no
max-module-lines=1000

[MISCELLANEOUS]
notes=FIXME,XXX,TODO

[SIMILARITIES]
min-similarity-lines=4
ignore-comments=yes
ignore-docstrings=yes
ignore-imports=yes

[TYPECHECK]
ignore-none=yes
ignore-on-opaque-inference=yes
missing-member-hint=yes
generated-members=numpy.*,torch.*,cv2.*,pd.*

[VARIABLES]
init-import=no
dummy-variables-rgx=_$|dummy
ignored-argument-names=_.*|^ignored_|^unused_

[CLASSES]
valid-classmethod-first-arg=cls
valid-metaclass-classmethod-first-arg=mcs

[DESIGN]
max-args=6
max-locals=30
max-returns=10
max-branches=13
max-statements=50
max-parents=7
max-attributes=20
min-public-methods=1
max-public-methods=20
max-nested-blocks=7

[IMPORTS]
allow-wildcard-with-all=no
allow-any-import-level=

[EXCEPTIONS]
overgeneral-exceptions=builtins.Exception